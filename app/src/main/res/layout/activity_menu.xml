<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test of English"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textViewSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="These are our three levels to test your level of English, enjoy it"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"/>

        <!-- Basic Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="4dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="onBasicLevelClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/images"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textViewBasicLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic level"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textViewBasicLevelDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic, at this level we will test your ability with contractions, subjects, verb to-be. Do you dare????"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/buttonBasicLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:onClick="onBasicLevelClick"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Intermediate Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="4dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="onIntermediateLevelClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/medio"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textViewIntermediateLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate level"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textViewIntermediateLevelDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Intermediate, we raise the level, verbs in the present, past and future, including possessive pronouns."
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/buttonIntermediateLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:onClick="onIntermediateLevelClick"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Advanced Level Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:elevation="4dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="onAdvancedLevelClick">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="800px"
                    android:src="@drawable/avanzado"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textViewAdvancedLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced level"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/textViewAdvancedLevelDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced, test your proficiency in complex sentence structures and idiomatic expressions."
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/buttonAdvancedLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter"
                    android:onClick="onAdvancedLevelClick"
                    android:layout_gravity="center_horizontal"
                    android:padding="8dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>